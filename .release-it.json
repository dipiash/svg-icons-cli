{
  "plugins": {
    "@release-it/conventional-changelog": {
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "cleanup",
            "section": "Cleanup"
          },
          {
            "type": "docs",
            "section": "Documentations"
          },
          {
            "type": "style",
            "section": "Style"
          },
          {
            "type": "perf",
            "section": "Performance"
          },
          {
            "type": "test",
            "section": "Tests"
          },
          {
            "type": "ci",
            "section": "CI/CD"
          },
          {
            "type": "build:",
            "section": "Build"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": "package.json",
      "out": ["package.json"]
    }
  },
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release ${version}",
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true,
    "allowSameVersion": false
  },
  "github": {
    "release": true,
    "assets": ["*.tgz"]
  },
  "hooks": {
    "after:bump": "npm run pack"
  }
}
